<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/level_desc_margin_left"
            android:paddingRight="@dimen/level_desc_margin_right"
            android:orientation="vertical">
            
            <!-- Heart rate -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/level_desc_margin_top">
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/asus_wellness_ic_exercise_intensity_2"/>"
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/level_desc_message_margin_left"
                    android:textSize="@dimen/level_desc_title_font_size"
                    android:text="@string/exercise_intensity_info_heart_rate_title"
                    android:fontFamily="sans-serif-light"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/level_desc_message_margin_left"
                android:layout_marginRight="@dimen/level_desc_message_margin_right"
                android:textSize="@dimen/level_desc_font_size"
                android:text="@string/exercise_intensity_info_heart_rate_message"
                android:fontFamily="sans-serif-light"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/level_desc_div_margin_top"
                android:layout_marginBottom="@dimen/level_desc_div_margin_bottom"
                android:background="@drawable/asus_wellness_line_line2"/>
            
            <!-- Exercise intensity -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/asus_wellness_ic_exercise_intensity"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/level_desc_message_margin_left"
                    android:textSize="@dimen/level_desc_title_font_size"
                    android:text="@string/exercise_intensity_info_exercise_title"
                    android:fontFamily="sans-serif-light"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/level_desc_message_margin_left"
                android:layout_marginRight="@dimen/level_desc_message_margin_right"
                android:textSize="@dimen/level_desc_font_size"
                android:text="@string/exercise_intensity_info_exercise_message"
                android:fontFamily="sans-serif-light"/>
            
            <!-- L5 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/level_desc_level_margin_top">
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/asus_wellness_ic_blue1"/>
                <ImageView 
                    android:id="@+id/level_desc_runner_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/asus_wellness_ic_runners_1"/>
                <LinearLayout 
                    android:id="@+id/level_desc_text_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/level_desc_runner_1"
                    android:layout_marginLeft="@dimen/level_desc_message_margin_left"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/level_desc_l5_textview"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="@dimen/level_desc_title_font_size"
	                    android:fontFamily="sans-serif"
	                    android:textStyle="bold"/>
                    <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="@dimen/level_desc_font_size"
	                    android:text="@string/exercise_intensity_info_l5_desc"
	                    android:fontFamily="sans-serif"/>
                </LinearLayout>
                
                <View 
	                android:layout_width="match_parent"
	                android:layout_height="1dp"
	                android:layout_below="@id/level_desc_text_container"
	                android:background="@drawable/asus_wellness_line_line2"/>
            </RelativeLayout>
