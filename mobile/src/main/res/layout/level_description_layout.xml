                    android:layout_centerVertical="true"
                    android:src="@drawable/asus_wellness_ic_runners_4"/>
                <LinearLayout 
                    android:id="@id/level_desc_text_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/level_desc_runner_4"
