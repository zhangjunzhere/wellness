<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dailyanim_layout_width"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:visibility="visible" >

    <FrameLayout
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dailyanim_calendar_marginTop"
        android:background="#00ffffff" >

        <TextView
            android:id="@+id/c0_txt"
            android:layout_width="@dimen/dailyanim_c_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dailyanim_c_txt_marginLeft"
            android:layout_marginTop="@dimen/dailyanim_c0_txt_marginTop"
            android:gravity="center"
            android:text="99"
            android:textSize="@dimen/dailyanim_c_txt_small_textsize"
            android:textStyle="bold"
            android:background="#00ffffff" />

        <TextView
            android:id="@+id/c1_txt"
            android:layout_width="@dimen/dailyanim_c_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dailyanim_c_txt_marginLeft"
            android:layout_marginTop="@dimen/dailyanim_c1_txt_marginTop"
            android:gravity="center"
            android:text="99"
            android:textSize="@dimen/dailyanim_c_txt_small_textsize"
            android:textStyle="bold"
            android:background="#00ffffff" />

        <TextView
            android:id="@+id/c2_txt"
            android:layout_width="@dimen/dailyanim_c_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dailyanim_c_txt_marginLeft"
            android:layout_marginTop="@dimen/dailyanim_c2_txt_marginTop"
            android:gravity="center"
            android:text="99"
            android:textSize="@dimen/dailyanim_c_txt_small_textsize"
            android:textStyle="bold"
            android:background="#00ffffff" />

        <TextView
            android:id="@+id/c3_txt"
            android:layout_width="@dimen/dailyanim_c_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dailyanim_c_txt_marginLeft"
            android:layout_marginTop="@dimen/dailyanim_c3_txt_marginTop"
            android:gravity="center"
            android:text="99"
            android:textSize="@dimen/dailyanim_c_txt_small_textsize"
            android:textStyle="bold"
            android:background="#00ffffff" />

        <TextView
            android:id="@+id/c4_txt"
            android:layout_width="@dimen/dailyanim_c_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dailyanim_c_txt_marginLeft"
            android:layout_marginTop="@dimen/dailyanim_c4_txt_marginTop"
            android:gravity="center"
            android:text="99"
            android:textSize="@dimen/dailyanim_c_txt_small_textsize"
            android:textStyle="bold"
            android:background="#00ffffff" />

        <TextView
            android:id="@+id/c5_txt"
            android:layout_width="@dimen/dailyanim_c_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dailyanim_c_txt_marginLeft"
            android:layout_marginTop="@dimen/dailyanim_c5_txt_marginTop"
            android:gravity="center"
            android:text="99"
            android:textColor="#FF727272"
            android:textSize="@dimen/dailyanim_c_txt_large_textsize"
            android:textStyle="bold"
            android:background="#00ffffff" />
    </FrameLayout>

    <ImageView
        android:id="@+id/white_mask"
        android:layout_width="@dimen/dailyanim_white_mask_width"
        android:layout_height="@dimen/dailyanim_white_mask_height"
        android:layout_marginLeft="@dimen/dailyanim_white_mask_marginLeft"
        android:layout_marginTop="@dimen/dailyanim_white_mask_marginTop"
        android:src="@drawable/asus_mask_date" />

    <TextView
        android:id="@+id/month_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dailyanim_month_txt_marginLeft"
        android:layout_marginTop="@dimen/dailyanim_month_txt_marginTop"
        android:gravity="right"
        android:text="12"
        android:textColor="#FF404040"
        android:textSize="@dimen/dailyanim_month_txt_textsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/week_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dailyanim_week_txt_marginLeft"
        android:layout_marginTop="@dimen/dailyanim_week_txt_marginTop"
        android:gravity="left"
        android:text="TUE"
        android:textColor="#FF404040"
        android:textSize="@dimen/dailyanim_week_txt_textsize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/divide_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dailyanim_divide_txt_marginLeft"
        android:layout_marginTop="@dimen/dailyanim_divide_txt_marginTop"
        android:text="/"
        android:textColor="#FF404040"
        android:textSize="@dimen/dailyanim_divide_txt_textsize" />

    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/today_btn"
        android:background="#00000000"
        android:layout_marginTop="@dimen/dailyanim_today_btn_marginTop"
        android:src="@drawable/today_button"
        android:layout_marginLeft="@dimen/dailyanim_today_btn_marginLeft" />

</FrameLayout>