<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/week_title_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/weektitleview_height" >

    <FrameLayout
        android:id="@+id/weektitle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/weektitle_container_marginTop" >

        <TextView
            android:id="@+id/textview_week0"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:textSize="@dimen/weektitle_textsize"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#00FF0000" />

        <TextView
            android:id="@+id/textview_week1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:textSize="@dimen/weektitle_textsize"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#0000FF00" />

        <TextView
            android:id="@+id/textview_week2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:textSize="@dimen/weektitle_textsize"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#000000FF" />

        <TextView
            android:id="@+id/textview_week3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:textSize="@dimen/weektitle_textsize"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#00FFFF00" />

        <TextView
            android:id="@+id/textview_week4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:textSize="@dimen/weektitle_textsize"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#0000FFFF" />

    </FrameLayout>

</FrameLayout>