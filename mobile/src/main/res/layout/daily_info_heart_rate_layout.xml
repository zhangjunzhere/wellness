<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
	<ImageView
	    android:id="@+id/heartrate_iv"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/asus_wellness_ic_exercise_intensity_2"
    	android:layout_gravity="center_vertical"/>
	<LinearLayout
	    android:minWidth="@dimen/timeline_heartrate_minwidth"
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
  		<LinearLayout
  		    android:id="@+id/heartrate_container_up"
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">
	    	<TextView
	    	    android:layout_marginLeft="@dimen/timeline_item_left_margin"
	    	    android:textSize="16dp"
		 		android:textColor="#000000"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="@string/daily_info_heart_title"
		    	android:maxWidth="200dp"
		    	android:fontFamily="sans-serif-light"/>
	    	<!-- fake data -->
	    	<TextView
	    	    android:visibility="invisible"
    	        android:text="1"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
				style="@style/timestring_big" />
    	</LinearLayout>
    	<View
    	    android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:background="#ff8dce0f"/>
    	<LinearLayout
    	    android:id="@+id/heartrate_container_down"
    	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">
	    	<TextView
	    	    android:layout_marginLeft="@dimen/timeline_item_left_margin"
	    	    android:id="@+id/heart_rate_bpm"
	    	    android:textSize="16dp"
	    	    android:textColor="#000000"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:fontFamily="sans-serif"/>
	 		<TextView
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text=" / "
				style="@style/timestring_big"
				android:visibility="visible"/>
	    	<TextView
	    	    android:id="@+id/heart_rate_level"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="L3"
				style="@style/timestring_big"/>
	    </LinearLayout>
    </LinearLayout>	
</LinearLayout>
