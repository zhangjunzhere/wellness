<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
   	    android:layout_marginLeft="@dimen/icon_offset"
   	    android:id="@+id/img_sleep_icon"
   	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/asus_wellness_ic_sleep_timeline"
		android:layout_gravity="center_vertical"/>
    <LinearLayout
       	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:minWidth="@dimen/timeline_activity_minwidth">
		<LinearLayout
	       	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
	    	<TextView
	    	    android:layout_marginLeft="@dimen/timeline_item_left_margin"
		        android:id="@+id/tv_sleep_type"
		        android:textSize="16dp"
		        android:textColor="#000000"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:fontFamily="sans-serif-light"
                android:text="@string/text_sleep_quality_score"
				android:visibility="visible" />

			<TextView
				android:id="@+id/timeline_score_tv"
				android:textSize="16dp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif-light"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/tv_sleep_score"
				android:text="80"
				android:textSize="22dp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"/>
			<!-- fake data -->
			<TextView
				android:visibility="invisible"
				android:text="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/timestring_big"/>
	    </LinearLayout>
    	<View
    	    android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:background="#ff5097db"/>
    	<LinearLayout
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">
	    	<TextView
	    	    android:layout_marginLeft="@dimen/timeline_item_left_margin"
		        android:id="@+id/tv_sleep_hour"
		        android:textSize="16dp"
		        android:textColor="#000000"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:fontFamily="sans-serif-light"
                android:text="6"/>
	    	<!--<TextView
	    	    android:id="@+id/tv_sleep_hour_unit"
	    	    android:layout_marginLeft="6dp"
	    	    android:textSize="16dp"
		        android:textColor="#000000"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:fontFamily="sans-serif-light"
                android:text="hr"/>
			<TextView
	    	    android:id="@+id/tv_sleep_min"
	    	    android:layout_marginLeft="6dp"
	    	    android:textSize="16dp"
		        android:textColor="#000000"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:fontFamily="sans-serif-light"
                android:text="32"/>
            <TextView
                android:id="@+id/tv_sleep_min_unit"
                android:layout_marginLeft="6dp"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="min"/>-->
			<!-- fake data -->
			<TextView
				android:visibility="invisible"
				android:text="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/timestring_big"/>
    	</LinearLayout>
	</LinearLayout>
</LinearLayout>
