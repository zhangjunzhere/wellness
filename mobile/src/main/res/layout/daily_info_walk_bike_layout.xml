<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
   	    android:layout_marginLeft="@dimen/icon_offset"
   	    android:id="@+id/img_step_or_bike_icon"
   	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/asus_wellness_ic_walk"
		android:layout_gravity="center_vertical"/>
    <LinearLayout
       	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:minWidth="@dimen/timeline_activity_minwidth">
		<LinearLayout
	       	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
	    	<TextView
	    	    android:layout_marginLeft="@dimen/timeline_item_left_margin"
		        android:id="@+id/tv_step_or_bike_type"
		        android:textSize="16dp"
		        android:textColor="#000000"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:fontFamily="sans-serif-light"/>

			<TextView
				android:layout_marginLeft="6dp"
				android:id="@+id/tv_step_or_bike_steps"
				android:textSize="16dp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif-light"/>

			<TextView
				android:id="@+id/tv_step_or_bike_unit"
				android:layout_marginLeft="4dp"
				android:textSize="16dp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif-light"
				android:visibility="gone"/>
			<TextView
				android:textSize="22dp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif"
				style="@style/timestring_big"
				android:text=" / "
				android:id="@+id/info_div"
				android:visibility="gone"/>

	   		<!-- fake data -->
	    	<!--<TextView
	    	    android:visibility="invisible"
    	        android:text="1"
	    	    android:textSize="22dp"
	    	    android:textColor="#dd6161"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:fontFamily="sans-serif-light"/>-->
	    </LinearLayout>
    	<View
			android:id="@+id/walk_run_info_line"
    	    android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:background="#ff81bc0f"/>
    	<LinearLayout
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal">

			<TextView
				android:layout_marginLeft="@dimen/timeline_item_left_margin"
				android:id="@+id/tv_step_or_bike_time"
				android:textSize="16dp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif-light"
				/>

			<TextView
				android:layout_marginLeft="@dimen/timeline_item_left_margin"
				android:id="@+id/tv_step_or_bike_distance"
				android:textSize="16dp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif-light"
				android:visibility="gone"/>
			<TextView
				android:id="@+id/tv_step_or_bike_kcal"
				android:textSize="16dp"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif-light"
				android:visibility="gone"
				/>
    	</LinearLayout>
	</LinearLayout>
</LinearLayout>
