            android:targetPackage="com.asus.wellness"
            android:targetClass="com.asus.wellness.ui.daily.SleepInfoDetailActivity">
            <extra android:name="key"
                android:value="2"
                />
        </intent>
    </Preference>
    <Preference
        android:title="@string/awakenings"
        android:key="@string/awakenings"
        >
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.asus.wellness"
            android:targetClass="com.asus.wellness.ui.daily.SleepInfoDetailActivity">
            <extra android:name="key"
                android:value="3"
                />
        </intent>
