<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:title="@string/text_sleep_quality_score"
        android:key="@string/text_sleep_quality_score"
        >
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.asus.wellness"
            android:targetClass="com.asus.wellness.ui.daily.SleepInfoDetailActivity">
           <extra android:name="key"
               android:value="0"
               />
            </intent>
    </Preference>

    <Preference
        android:title="@string/sleeplenght"
        android:key="@string/sleeplenght"
