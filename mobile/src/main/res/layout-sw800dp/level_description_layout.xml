<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp" >

                <!-- Heart rate -->

                <LinearLayout
                    android:layout_width="420dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="220dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/asus_wellness_ic_exercise_intensity_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="26dp"
                        android:layout_marginTop="28dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/exercise_intensity_info_heart_rate_title"
                        android:textSize="@dimen/level_desc_title_font_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="@string/exercise_intensity_info_heart_rate_message"
                        android:textSize="@dimen/level_desc_font_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="420dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <!-- Exercise intensity -->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/asus_wellness_ic_exercise_intensity" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="26dp"
                        android:layout_marginTop="28dp"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/exercise_intensity_info_exercise_title"
                        android:textSize="@dimen/level_desc_title_font_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="@string/exercise_intensity_info_exercise_message"
                        android:textSize="@dimen/level_desc_font_size" />
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="9"
                android:rowCount="1"
                android:layout_marginTop="150dp" >

                <!-- L1 -->

                <LinearLayout
                    android:id="@+id/LinearLayout"
                    android:layout_width="@dimen/level_desc_level_wdith"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/level_desc_l1_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="@dimen/level_desc_title_font_size"
                        android:textStyle="bold" 
                        android:textColor="@color/level_des_l1"
                        android:layout_marginBottom="@dimen/level_desc_image_margin_bottom"
                        
                        />

                    <ImageView
                        android:id="@+id/level_desc_runner_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/asus_wellness_ic_runners_1"
                        android:layout_marginTop="@dimen/level_desc_image_margin_top"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="@string/exercise_intensity_info_l1_desc"
                        android:textSize="@dimen/level_desc_font_size2"
                        android:textColor="@color/level_des_l1"
                        android:layout_marginTop="@dimen/level_desc_image_margin_top"
                         />

                </LinearLayout>
                
                <!-- L2 -->

                <LinearLayout
                    android:layout_width="@dimen/level_desc_level_wdith"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/level_desc_l2_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="@dimen/level_desc_title_font_size"
                        android:textStyle="bold" 
                        android:textColor="@color/level_des_l2"
                        android:layout_marginBottom="@dimen/level_desc_image_margin_bottom"
                        />

                    <ImageView
                        android:id="@+id/level_desc_runner_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/asus_wellness_ic_runners_2" 
                        android:layout_marginTop="@dimen/level_desc_image_margin_top"
                        />

                    <TextView
                        android:id="@+id/level_desc_light_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/exercise_intensity_info_l2_desc"
                        android:textSize="@dimen/level_desc_font_size2" 
                        android:layout_marginTop="@dimen/level_desc_image_margin_top"
                        android:lineSpacingExtra="14dp"
                        android:textColor="@color/level_des_l2"
                        
                        />

                </LinearLayout>
                <!-- L3 -->

                <LinearLayout
                    android:layout_width="@dimen/level_desc_level_wdith"
                    android:layout_height="wrap_content"
                    android:layout_column="4"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/level_desc_l3_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="@dimen/level_desc_title_font_size"
                        android:textStyle="bold" 
                        android:layout_marginBottom="@dimen/level_desc_image_margin_bottom"
                        android:textColor="@color/level_des_l3"
                        />

                    <ImageView
                        android:id="@+id/level_desc_runner_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/asus_wellness_ic_runners_3"
                        android:layout_marginTop="@dimen/level_desc_image_margin_top"
                         />

                    <TextView
                        android:id="@+id/level_desc_moderate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="@string/exercise_intensity_info_l3_desc"
                        android:textSize="@dimen/level_desc_font_size2" 
                        android:layout_marginTop="@dimen/level_desc_image_margin_top"
                        android:lineSpacingExtra="14dp"
                        android:textColor="@color/level_des_l3"
                        />

                </LinearLayout>
                <!-- L4 -->

                <LinearLayout
                    android:layout_width="@dimen/level_desc_level_wdith"
                    android:layout_height="wrap_content"
                    android:layout_column="6"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/level_desc_l4_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="@dimen/level_desc_title_font_size"
                        android:textStyle="bold" 
                        android:layout_marginBottom="@dimen/level_desc_image_margin_bottom"
                        android:textColor="@color/level_des_l4"
                        />

                    <ImageView
                        android:id="@+id/level_desc_runner_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/asus_wellness_ic_runners_4"
                        android:layout_marginTop="@dimen/level_desc_image_margin_top"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="@string/exercise_intensity_info_l4_desc"
                        android:textSize="@dimen/level_desc_font_size2" 
                        android:layout_marginTop="@dimen/level_desc_image_margin_top"
                        android:textColor="@color/level_des_l4"
                        />

                </LinearLayout>
                <!-- L5 -->


                <LinearLayout
                    android:layout_width="@dimen/level_desc_level_wdith"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/level_desc_l5_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="@dimen/level_desc_title_font_size"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/level_desc_image_margin_bottom"
                        android:textColor="@color/level_des_l5"
                         />

                    <ImageView
                        android:id="@+id/level_desc_runner_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/asus_wellness_ic_runners_5" 
                        android:layout_marginTop="@dimen/level_desc_image_margin_top"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:text="@string/exercise_intensity_info_l5_desc"
                        android:textSize="@dimen/level_desc_font_size2" 
						android:textColor="@color/level_des_l5"
                        android:layout_marginTop="@dimen/level_desc_image_margin_top"
                        />

                </LinearLayout>
                <!-- Line -->
                <View 
	                android:layout_width="1dp"
	                android:layout_height="200dp"
	                android:background="@drawable/asus_wellness_ic_ling_dashed"
	                android:layout_column="1"
                    android:layout_row="0"
	             />
                 <View 
	                android:layout_width="1dp"
	                android:layout_height="200dp"
	                android:background="@drawable/asus_wellness_ic_ling_dashed"
	                android:layout_column="3"
                    android:layout_row="0"
	             />
                 <View 
	                android:layout_width="1dp"
	                android:layout_height="200dp"
	                android:background="@drawable/asus_wellness_ic_ling_dashed"
	                android:layout_column="5"
                    android:layout_row="0"
	             />
                 <View 
	                android:layout_width="1dp"
	                android:layout_height="200dp"
	                android:background="@drawable/asus_wellness_ic_ling_dashed"
	                android:layout_column="7"
                    android:layout_row="0"
	             />
                                                
                <View
                    android:layout_width="1189dp"
                    android:layout_height="1dp"
                    android:layout_column="0"
                    android:layout_columnSpan="8"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="36dp"
                    android:layout_row="0"
                    android:background="@drawable/asus_wellness_line_line2" />
                
            </GridLayout>

        </LinearLayout>
    </ScrollView>
