<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <!-- no data -->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/no_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout 
                android:layout_marginTop="295dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/asus_wellness_bg_background">
            </FrameLayout>
       
            <LinearLayout
                android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_marginTop="57dp"
                    android:layout_marginLeft="56dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_marginLeft="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/daily_energy_detail_measurement"
                            android:textSize="27dp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif"/>
                        <TextView
                            android:layout_marginLeft="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="27dp"
                            android:textColor="#000"
                            android:fontFamily="sans-serif"/>
                        <TextView
                            android:layout_marginLeft="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="27dp"
                            android:textColor="#ea2f45"
                            android:fontFamily="sans-serif"/>
                        <TextView
                            android:layout_marginLeft="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/count_time"
                            android:textSize="27dp"
                            android:textColor="#ea2f45"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>
	    	    <RelativeLayout
                    android:layout_marginTop="60dp"
                    android:layout_width="125dp"
	    		    android:layout_height="337dp">
		    	    <ImageView
		    		    android:layout_width="wrap_content"
		    		    android:layout_height="wrap_content"
		    		    android:src="@drawable/asus_wellness_btn_orange_leaves"/>
		    	    <LinearLayout
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_alignParentBottom="true">
                       	<TextView
					    	android:layout_width="100dp"
					    	android:layout_height="100dp"
					    	android:text="@string/default_average_energy_level_message_break"
						  	android:textSize="20dp"
					    	android:textColor="#ffffffff"
					    	android:fontFamily="sans-serif-light"
					    	android:gravity="center"/>
                        <!-- <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/asus_wellness_btn_orange_leaves_watch"/>-->
			         </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asus_wellness_ic_measure_now"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/none_data_inside"
                        android:textSize="18dp"
                        android:textColor="#eb3043"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/detail_energy_best_info_energy_level"/>
                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21dp"
                        android:textColor="#000"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/daily_info_energy_title"/>
                    <TextView
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="27dp"
                        android:textColor="#e16959"
                        android:fontFamily="sans-serif-light"
                        android:text="0"/>
                </LinearLayout>
                <ImageView
                        android:layout_marginBottom="38dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/asus_wellness_line_line2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/detail_energy_worst_info_stress_level"/>
                    <TextView
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21dp"
                        android:textColor="#000"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/daily_info_energy_title"/>
                    <TextView
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="27dp"
                        android:textColor="#e16959"
                        android:fontFamily="sans-serif-light"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
	    
	    <!-- has data -->
	    <LinearLayout
			android:id="@+id/has_data_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
            <RelativeLayout
    	        android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/asus_wellness_bg_background"
	    	        android:layout_marginTop="14dp">
                </FrameLayout>
	    		<!-- info and leave -->
		    	<LinearLayout
		    		android:layout_marginLeft="57dp"
		    		android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:orientation="horizontal">
			    	<!-- best info -->
			    	<LinearLayout  
						android:id="@+id/info_container"
			    		android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:gravity="right">
						<LinearLayout
                            android:layout_marginTop="45dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <ImageView
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="6dp"
                                    android:layout_marginRight="3dp"
                                    android:layout_width="206dp"
                                    android:layout_height="1dp"
                                    android:background="@drawable/asus_wellness_line_line2"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/measure_time_best"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textColor="#ff282828"
                                android:fontFamily="sans-serif"
                                android:text="00:00"/>
                        </LinearLayout>
						<LinearLayout
						    android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/best_info_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:fontFamily="sans-serif-light"/>
				    	    <TextView
				    	        android:id="@+id/best_info_text"
				    		    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:textSize="21dp"
							    android:textColor="#000"
							    android:fontFamily="sans-serif-light"
							    android:text="@string/detail_energy_best_info_energy_level"/>
				    	</LinearLayout>
				    	<LinearLayout
				    	    android:layout_marginTop="11dp"
				    		android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">
							<TextView
							    android:id="@+id/measure_value_best"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textSize="27dp"
								android:textColor="#f77148"
								android:fontFamily="sans-serif"
								android:text="0"/>
							<ImageView
							    android:id="@+id/best_info_icon"
							    android:layout_marginLeft="10dp"
								android:layout_width="26dp"
								android:layout_height="26dp"
								android:src="@drawable/asus_wellness_ic_best_info"
								android:layout_gravity="center_vertical"/>
						</LinearLayout>
						
						<LinearLayout
						    android:layout_marginTop="40dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
							<RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
						        <ImageView
						            android:layout_alignParentBottom="true"
						            android:layout_marginBottom="6dp"
						            android:layout_marginRight="3dp"
							        android:layout_width="206dp"
							        android:layout_height="1dp"
							        android:background="@drawable/asus_wellness_line_line2"/>
						    </RelativeLayout>
						    <TextView
                                android:id="@+id/measure_time_worst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textColor="#ff282828"
                                android:fontFamily="sans-serif"
                                android:text="00:00"/>
						</LinearLayout>
						<LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
						    <TextView
						        android:id="@+id/worst_info_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:fontFamily="sans-serif-light"/>
						    <TextView
						        android:id="@+id/worst_info_text"
				    		    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:textSize="21dp"
							    android:textColor="#000"
							    android:fontFamily="sans-serif-light"
							    android:text="@string/detail_energy_worst_info_stress_level"/>
						</LinearLayout>
						<LinearLayout
						    android:layout_marginTop="11dp"
				    		android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">
							<TextView
							    android:id="@+id/measure_value_worst"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textSize="23dp"
								android:textColor="#ffc14343"
								android:fontFamily="sans-serif"
								android:text="0"/>
							<ImageView
							    android:id="@+id/worst_info_icon"
							    android:layout_marginLeft="10dp"
								android:layout_width="26dp"
								android:layout_height="26dp"
								android:src="@drawable/asus_wellness_ic_worst_info"
								android:layout_gravity="center_vertical"/>
						</LinearLayout>
				   	</LinearLayout>
				   	
			    	<!-- leaves -->
					<RelativeLayout
			    	    android:layout_width="126dp"
			    		android:layout_height="337dp"
			    	    android:layout_marginLeft="40dp">
				    	<ImageView
				    		android:layout_width="wrap_content"
				    		android:layout_height="wrap_content"
				    		android:src="@drawable/asus_wellness_btn_orange_leaves"/>
				    	<LinearLayout
				    	    android:layout_marginBottom="3dp"
				    	    android:layout_marginRight="4dp"
					 		android:layout_width="100dp"
					    	android:layout_height="100dp"
					    	android:orientation="vertical"
					    	android:layout_alignParentBottom="true"
					    	android:layout_alignParentRight="true"
					    	android:gravity="center">
							<TextView
							    android:id="@+id/tv_average_energy"
						    	android:layout_width="wrap_content"
						    	android:layout_height="wrap_content"
						    	android:layout_gravity="center_horizontal"
						    	android:text="0"
							  	android:textSize="38dp"
						    	android:textColor="#ffffff"
						    	android:fontFamily="sans-serif-light"/>
							<TextView
						    	android:layout_marginTop="-10dp"
						    	android:layout_width="wrap_content"
						    	android:layout_height="wrap_content"
						    	android:layout_gravity="center"
						    	android:text="@string/text_average"
							  	android:textSize="16dp"
						    	android:textColor="#ffffff"
						    	android:fontFamily="sans-serif-light"/>
					    </LinearLayout>
					</RelativeLayout>
			   	</LinearLayout>
            </RelativeLayout>
            <LinearLayout
	    	    android:layout_marginLeft="60dp"
	    	    android:layout_marginRight="60dp"
	    	    android:layout_marginTop="29dp"
	    		android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<ImageView
				    android:layout_marginLeft="10dp"
					android:layout_width="33dp"
					android:layout_height="33dp"
					android:src="@drawable/asus_wellness_ic_measurements"/>
				<TextView
				    android:layout_marginLeft="14dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/daily_energy_detail_measurement"
					android:textSize="24dp"
					android:textColor="#000"
					android:fontFamily="sans-serif"/>
				<TextView
				    android:layout_marginLeft="3dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=":"
					android:textSize="24dp"
					android:textColor="#000"
					android:fontFamily="sans-serif"/>
				<TextView
				    android:layout_marginLeft="8dp"
				    android:id="@+id/measure_times"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=" 4 "
					android:textSize="27dp"
					android:textColor="#fff77148"
					android:fontFamily="sans-serif"/>
				<TextView
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/count_time"
                    android:textSize="27dp"
                    android:textColor="#fff77148"
                    android:fontFamily="sans-serif"/>
				<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/asus_wellness_line_line2"/>
                </RelativeLayout>
	    	</LinearLayout>
	    	<com.asus.wellness.ui.daily.TimeLineRelativeLayout
	    	    android:layout_marginLeft="60dp"
	    	    android:layout_marginRight="60dp"
    			android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:id="@+id/measure_timeline"/>
	   	</LinearLayout>
	</LinearLayout>
</ScrollView>
