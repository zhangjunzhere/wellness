<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- Add Five Percent -->
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/asus_micro_ic_percent"
        android:layout_marginTop="18dp"
        android:onClick="nextGoalClick"
        android:gravity="center_vertical">

        <!-- Add -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            style="@style/roboto_green_bold"
            android:background="@android:color/transparent"
            android:textSize="57dp"
            android:layout_marginLeft="22dp"/>

        <!-- Five -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            style="@style/roboto_green_bold"
            android:background="@android:color/transparent"
            android:textSize="45dp"
            android:layout_marginTop="1dp"/>

        <!-- % -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            style="@style/roboto_green_bold"
            android:background="@android:color/transparent"
            android:textSize="25dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <!--String: Tap to add GOAL -->
    <TextView
        android:id="@+id/tap_to_add_goal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/tap_to_add_goal"
        android:paddingLeft="@dimen/padding_lr"
        android:paddingRight="@dimen/padding_lr"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:gravity="center"/>

</LinearLayout>
