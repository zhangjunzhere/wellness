<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >
    <ImageView
        android:id="@+id/iv_inbed"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/asus_wellness_ic_inbed"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/tv_inbed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inbed"
        android:textColor="@color/sleep_text_normal"
        android:layout_marginLeft="3dp"
        android:textSize="15dp"
        android:layout_toRightOf="@id/iv_inbed"
        />
    <TextView
        android:id="@+id/tv_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/tv_inbed"
        android:textColor="@color/sleep_text_normal"
        android:text="@string/am"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00"
        android:textColor="@color/sleep_text_highlight"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/tv_am"
        android:layout_alignBaseline="@id/tv_inbed"
        />

</RelativeLayout>





