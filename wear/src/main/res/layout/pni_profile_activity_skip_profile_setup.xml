<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/profilebg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/skipprofilesetup"
        style="@style/skiptexttitle"
        android:gravity="center_vertical|left"
        android:id="@+id/title"
        />

    <ImageView
        android:layout_below="@+id/title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:id="@+id/profile_title_line"
        android:layout_height="1dp" />
    <Button
        android:text="@string/yesskip"
        android:id="@+id/yesskipbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pni_skip_button_bg"
        style="@style/skipbutton"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <Button

        android:text="@string/cancel"
        android:id="@+id/cancelbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pni_skip_button_bg"
        style="@style/skipbutton"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

</LinearLayout>
