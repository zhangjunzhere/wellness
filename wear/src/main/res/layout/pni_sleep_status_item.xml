<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
   >
    <ImageView
        android:id="@+id/iv_inbed"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:src="@drawable/asus_wellness_ic_inbed"
        android:visibility="visible"
        />
    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_inbed"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/inbed"
        android:textColor="@color/sleep_text_normal"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:textSize="15dp"
        android:layout_toRightOf="@id/iv_inbed"
        android:singleLine="true"
        autofit:minAutoTextSize="8dp"
        />
    <include layout="@layout/pni_sleep_duration_item"
        android:id="@+id/ll_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignBaseline="@id/tv_inbed"
        />
</LinearLayout>





