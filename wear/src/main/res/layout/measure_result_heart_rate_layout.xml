<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">
   <LinearLayout
       	android:layout_marginTop="20dp"
       	android:layout_marginLeft="15dp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	<TextView
	        android:id="@+id/measure_result_heart_rate_value"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:fontFamily="sans-serif"
	    	android:textStyle="bold"
	        android:textColor="#ffffffff"
	        android:textSize="@dimen/heart_rate_number"/>
		<TextView
		    android:fontFamily="sans-serif-light"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="5dp"
	    	android:textSize="17dp"
	    	android:textColor="#ffffffff"
	    	android:text="@string/heart_rate_unit"/>
    </LinearLayout>
    <TextView
        android:id="@+id/measure_result_text"
        android:layout_marginTop="120dp"
       	android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:fontFamily="sans-serif"
        android:textColor="#ffffffff"
        android:textSize="@dimen/measure_result"
        android:text="@string/heart_rate"/>
	<TextView
	    android:id="@+id/exercise_intensity"
	    android:layout_below="@id/measure_result_text"
       	android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:fontFamily="sans-serif"
        android:textColor="#ffffffff"
        android:textSize="@dimen/exercise_intensity"
        android:text="@string/exercise_intensity"/>
    <TextView
        android:id="@+id/measure_comment_text"
        android:layout_below="@id/exercise_intensity"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:fontFamily="sans-serif"
        android:textColor="#ffffffff"
        android:textSize="@dimen/measure_comment"/>
</RelativeLayout>
