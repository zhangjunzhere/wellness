<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
    <ImageView
        android:id="@+id/iv_sleep"
        android:layout_width="@dimen/main_icon_width"
        android:layout_height="@dimen/main_icon_width"
        android:layout_marginTop="@dimen/tap_image_margin_top"
        android:src="@drawable/asus_wellness_ic_sleep" />
</LinearLayout>
    <com.asus.wellness.view.MyTextView
        android:id="@+id/lb_sleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/fragment_marquee_tap_text"
        android:text="@string/tap_to_start_sleep"
        />


</LinearLayout>