<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    >

   <ImageView
       android:id="@+id/iv_icon"
       android:layout_width="30dp"
       android:layout_height="wrap_content"
       android:src="@drawable/asus_wellness_ic_situp_g"
      android:layout_gravity="center"
    />

    <TextView android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="9.999"
        style="@style/coach_list_view_text"
        android:textSize="@dimen/workout_start_name_size"
        android:textColor="@color/congratulation_green"
        android:id="@+id/tv_value"
        />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/miles"
        android:id="@+id/tv_unit"
        android:textSize="@dimen/workout_start_value_size"
        android:textColor="@color/light_green"
        />

</LinearLayout>
