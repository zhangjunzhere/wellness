<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
    <ImageView
        android:id="@+id/ic_alarm"
        android:layout_width="@dimen/main_icon_width"
        android:layout_height="@dimen/main_icon_width"
        android:layout_marginTop="@dimen/tap_image_margin_top"
        android:src="@drawable/asus_wellness_ic_alarm"
        />
        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/idle_alram_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tap_text"
            android:visibility="gone"
            android:text="@string/idle_alarm_text"
            />
        <com.asus.wellness.view.MyTextView
            android:id="@+id/idle_text_on_off"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:fontFamily="roboto"
            style="@style/fragment_marquee_tap_text"
            android:text="@string/idle_alarm_off"
            android:layout_height="wrap_content" />
        </LinearLayout>


</LinearLayout>