<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageView
        android:id="@+id/animation_drawable"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"/>
	<ImageView
        android:id="@+id/hand_translation"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"/>
	<ImageView
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:background="@drawable/asus_wellness_animation_bg"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
   		android:layout_width="wrap_content"
   		android:layout_height="48dp"
   		android:gravity="center"
   		android:fontFamily="sans-serif"
        android:textColor="#ffffffff"
        android:textSize="@dimen/touch_gently_text_size"
        android:text="@string/tutorial_touch_sensor"/>
</RelativeLayout>
