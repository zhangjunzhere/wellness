<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="UserVoiceSDKTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:homeAsUpIndicator">@drawable/uf_sdk_ic_ab_back_dark</item>
        <item name="android:actionBarStyle">@style/uf_sdk_ActionBarStyle</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:actionBarTabTextStyle">@style/uf_sdk_tabtextcolor</item>
    </style>
    
    <style name="UserVoiceSDKTheme_light" parent="android:Theme.DeviceDefault.Light">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:homeAsUpIndicator">@drawable/uf_sdk_ic_ab_back_light</item>
        <item name="android:actionBarStyle">@style/uf_sdk_ActionBarStyle_light</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:actionBarTabTextStyle">@style/uf_sdk_tabtextcolor</item>
    </style>
    
    <style name="uf_sdk_ActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/uf_sdk_ActionBarTitleTextStyle</item>
        <item name="android:backgroundStacked">#eeeeee</item>
    </style>
    <style name="uf_sdk_ActionBarTitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="uf_sdk_tabtextcolor" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">#565656</item>
    </style>

    <style name="uv_ListSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3DB5E1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">4dip</item>
    </style>

    <style name="uv_ListSeparatorLight" parent="uv_ListSeparator">
        <item name="android:textColor">#666666</item>
    </style>

</resources>